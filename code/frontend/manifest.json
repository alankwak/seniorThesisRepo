{
    "manifest_version": 3,
    "name": "Tab-Sharing Prototype",
    "description": "Initial test for my senior thesis project, which allows users to share tabs with other users across devices.",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["https://www.alankwak.dev/*"],
            "js": ["Content.js"]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background/worker.js"
    },
    "side_panel": {
        "default_path": "sidebar/sidebar.html"
    },
    "permissions": [
        "sidePanel",
        "identity",
        "identity.email",
        "storage",
        "tabGroups",
        "tabs"
    ]
}